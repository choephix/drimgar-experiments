{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "type": "shell",
      "command": "npx lite-server",
      "isBackground": true,
      "problemMatcher": {
        "owner": "external",
        "pattern": {
          "regexp": "^(.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Started.*",
          "endsPattern": "Finished.*"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
